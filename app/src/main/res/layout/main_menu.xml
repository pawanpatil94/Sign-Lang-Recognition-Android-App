<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tutorialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:text="Tutorial" />

    <Button
        android:id="@+id/trainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tutorialButton"
        android:layout_alignRight="@+id/tutorialButton"
        android:layout_below="@+id/tutorialButton"
        android:layout_marginTop="46dp"
        android:text="Train" />

    <Button
        android:id="@+id/TestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/trainButton"
        android:layout_alignRight="@+id/trainButton"
        android:layout_below="@+id/trainButton"
        android:layout_marginTop="54dp"
        android:text="Test" />
</RelativeLayout>
